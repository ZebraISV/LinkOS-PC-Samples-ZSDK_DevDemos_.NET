<Window x:Class="Zebra.Windows.DevDemo.Dialogs.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zebra.Windows.DevDemo.Dialogs"
        mc:Ignorable="d"
        Title="About Zebra Developer Demos" Height="250" Width="350" ResizeMode="NoResize">
    <Window.Resources>
        <BitmapImage x:Key="ZebraLogoImageSource" UriSource="../../../../Resources/Images/Zebra_Logo_K.png" />
    </Window.Resources>
    <StackPanel Orientation="Vertical" Margin="20" VerticalAlignment="Center">
        <Image Source="{StaticResource ZebraLogoImageSource}" Width="150" Height="50" />
        <TextBlock Margin="0,10,0,0" HorizontalAlignment="Center" FontSize="16"><Bold>Zebra Developer Demos</Bold></TextBlock>
        <TextBlock Margin="0,5,0,0" HorizontalAlignment="Center">© 2017 ZIH Corp.</TextBlock>
    </StackPanel>
</Window>
